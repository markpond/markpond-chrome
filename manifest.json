{
	"name": "Markpond",
	"version": "2.0",
	"description": "Markpond Google Chrome Extension",
	"browser_action": {
		"default_icon": "64.png",
		"default_title": "Markpond",
		"default_popup": "popup.html"
	},

	"icons": {
		"64": "64.png",
		"128": "128.png"
	},

	"manifest_version": 2,

	"background": {
	    "page": "background.html"
	},

	"permissions": [
	    "<all_urls>",
		"contextMenus",
		"tabs"
	]

}